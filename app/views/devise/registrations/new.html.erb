<div class="text-center mb-3">
  <h2>Cadastro</h2>
</div>

<%= simple_form_for(resource,
                    as: resource_name,
                    url: registration_path(resource_name),
                    html: { class: "px-5 mx-5" }
                    ) do |f| %>
  <%= f.error_notification %>

  <div class="mb-3">
      <%= f.input :name,
                  label: "Nome",
                  required: true,
                  label_html: { class: 'form-label' },
                  input_html: { class: 'form-control form-control-sm' } %>
    </div>

    <div class="mb-3">
    <%= f.input :email,
                label: "Email",
                required: true,
                autofocus: true,
                label_html: { class: 'form-label' },
                input_html: { autocomplete: "email", class: 'form-control form-control-sm' }%>
    </div>

    <div class="mb-3">
    <%= f.input :password,
                label: "Senha",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                hint_html: { class: 'form-text'},
                label_html: { class: 'form-label' },
                input_html: { autocomplete: "new-password", class: 'form-control form-control-sm'} %>
    </div>

    <div class="mb-3">
    <%= f.input :password_confirmation,
                label: "Confirme a senha",
                required: true,
                label_html: { class: 'form-label' },
                input_html: { autocomplete: "new-password", class: 'form-control form-control-sm' } %>
    </div>

    <div class="mb-3">
    <%= f.input :professional_experience,
                label: "ExperiÃªncia profissional",
                label_html: { class: 'form-label' },
                as: :text,
                input_html: { class: 'form-control form-control-sm', rows: '3' } %>
    </div>

  <div class="text-center mb-3">
    <%= f.button :submit, "Cadastrar", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
